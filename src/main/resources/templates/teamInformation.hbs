{{#partial "content"}}
    <p>Content:</p>
    <p>{{ team.teamName }}</p>
    <h5>Created At:</h5>
    <p> {{ team.teamCreatedAt }}</p>
    <h5>Post status:</h5>
    <p>
        {{#if post.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}
        <a href="/teams/{{post.id}}/update">Edit this post</a>
    </p>
{{/partial}}

{{> layout.hbs}}