{{#partial "content"}}

    {{#if editTeam}}
        <h1>Edit this Team</h1>
        <form action="/team/{{editTeam.id}}/update" method="post">
            <div class="form-group">
                <label for="teamName">Edit this team's name</label><br>
                <input id="teamName" name="teamName" type="text" value="{{editTeam.teamName}}" required><br>
            </div>
            <div class="form-group">
                <label for="teamDescription">Edit this team's description</label><br>
                <input id="teamDescription" name="teamDescription" type="text" value="{{editTeam.teamDescription}}" required><br>
            </div>
            <div class="form-group">
                <label for="teamMember">Edit this team's members</label><br>
                <input id="teamMember" name="teamMember" type="text" value="{{editTeam.teamMember}}" required><br>
            </div>


            <button type="submit" class="btn btn-default">Finish editing team</button>
        </form>

    {{else}}

        <h1>Add a new Team!</h1>

        <h2>Team Entry Form</h2>

        <form action="/team/new" method="post">
            <div class="form-group">
                <label for="teamName">Hack-A-Thon Team Name</label><br>
                <input id="teamName" name="teamName" type="text" required><br>
            </div>
            <div class="form-group">
                <label for="teamDescription">Team Description</label><br>
                <input id="teamDescription" name="teamDescription" type="text" required><br>
            </div>
        <button type="submit" class="btn btn-default">Create this Team</button>
        </form>

    {{/if}}


{{/partial}}

{{> layout.hbs}}