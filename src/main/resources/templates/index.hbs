{{#partial "content"}}

    <h1>Team list</h1>
    {{#if teams}} <!--if teams exist, then -->
        {{#each teams }} <!--loop-->
            <p>Current Team:</p>
            <p>{{ teams }} Team</p> <!--show-->
        {{/each}}
    {{else}} <!--no teams!-->
        <p>No teams have been entered into the competition!</p>
    {{/if}}

    <form action="/teams/new" method="POST">
        <label for="teamName">Team Name</label>
        <input id="teamName" name="teamName" type="text">


        <button type="submit" class="btn btn-default">Enter a Team</button>
    </form>
{{/partial}}

{{> layout.hbs}}