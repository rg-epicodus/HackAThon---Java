{{#partial "content"}}

    {{#if editTeam}}
        <h1>Edit this Team</h1>
        <form action="/team/{{editTeam.teamId}}/update" method="post">
            <label for="teamName">Edit this team's name</label>
            <input id="teamName" name="teamName" type="text" value="{{editTeam.teamName}}" required><br>

            <button type="submit" class="btn btn-default">Edit this Team</button>
        </form>

    {{else}}

        <h1>Add a new Team!</h1>

        <h2>Team Entry Form</h2>

        <form action="/team/new" method="post">
            <label for="teamName">Hack-A-Thon Team Name</label><br>
            <input id="teamName" name="teamName" type="text" required><br>
            <label for="teamDescription">Description</label><br>
            <input id="teamDescription" name="teamDescription" type="text" required><br>
            <label for="teamMember">Member</label><br>
            <input id="teamMember" name="teamMember" type="text" required><br>

        <button type="submit" class="btn btn-default">Create this Team</button>
        </form>

    {{/if}}


{{/partial}}

{{> layout.hbs}}