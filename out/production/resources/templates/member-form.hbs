{{#partial "content"}}

    {{#if editMember}}

        <div class="well">
            <h1>Edit Team Member</h1>
            <form action="/team/{{editMember.teamId}}/member/{{editMember.id}}/update" method="post">
                <div class ="form-group">
                    <label for="memberName">Team Member Name: </label>
                    <input id="memberName" name="memberName" type="text" class="form-control"  placeholder="{{editMember.memberName}}" required>
                </div>
                <button type="submit" class="btn btn-default btn-sm center-block">Update Member</button>
            </form>
        </div>

    {{else}}
        <div class="well">
            <h1>Add a New Team Member</h1>
            <form action="/team/:teamId/member/new" method="post">
                <div class="form-group">
                    <label for="memberId">Team:</label>
                    <select id="memberId" name="memberId" required>
                        {{#each team}}
                            <option value="{{this.id}}">{{this.teamName}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class ="form-group">
                    <label for="memberName">Team Member Name: </label>
                    <input id="memberName" name="memberName" type="text" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-default btn-sm center-block">Add Member</button>
            </form>
        </div>
    {{/if}}

{{/partial}}

{{> layout.hbs}}