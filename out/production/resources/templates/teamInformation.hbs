{{#partial "content"}}
    <p>Team</p>
    <p>{{ team.teamName }}</p>
    <h5>Created At:</h5>
    <p> {{ team.teamCreatedAt }}</p>
    <h5>Post status:</h5>
    <p>
        {{#if team.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}
        <a href="/teams/{{team.id}}/update">Edit this Team</a>
        <a href="/teams/{{team.id}}/delete">DELETE this Team (no undo)</a>
    </p>
{{/partial}}

{{> layout.hbs}}